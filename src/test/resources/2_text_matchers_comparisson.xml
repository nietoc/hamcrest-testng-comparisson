<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Test suite">
    <test name="Contains string comparisson">
        <classes>
            <class name="TextMatchers">
                <methods>
                    <include name="containsStringTestNgTest"/>
                    <include name="containsStringHamcrestTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Equals ignoring case comparisson">
        <classes>
            <class name="TextMatchers">
                <methods>
                    <include name="equalsIgnoreCaseTestNgTest"/>
                    <include name="equalToIgnoringHamcrestCaseTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Empty or null String comparisson">
        <classes>
            <class name="TextMatchers">
                <methods>
                    <include name="emptyOrNullStringTestNgTest"/>
                    <include name="emptyOrNullStringHamcrestTest"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>